<Window x:Class="Assignment2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Startup Dialog" Height="250" Width="400">
    <Grid>
        <StackPanel x:Name="StartupDialog" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Welcome to Your Game" FontSize="16" FontWeight="Bold"/>
            <TextBlock Text="Enter the number of chances:"/>
            <TextBox x:Name="txtChances" Text="4" Width="100" Margin="0 10"/>
            <Button x:Name="btnStartGame" Content="Start Game" Click="btnStartGame_Click" Width="100" Margin="0 10"/>


        </StackPanel>
    </Grid>
</Window>
